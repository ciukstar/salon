
Array.from(
  document.querySelectorAll('.datetime')
).forEach(function (x) {
  x.textContent = new Date(x.textContent).toLocaleDateString(
    navigator.language,
    { weekday: 'short',
      year: 'numeric',
      month: 'short',
      day: 'numeric',
      hour: "numeric",
      minute: "numeric"
    }
  );
});
