
Array.from(
  document.querySelectorAll('time.appointment-datetime')
).filter(x => !!x).forEach(function (x) {
  x.textContent = new Date(x.getAttribute('datetime')).toLocaleDateString(
    navigator.language,
    { weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: "numeric",
      minute: "numeric"
    }
  );
});

Array.from(
  document.querySelectorAll('time.appointment-date')
).filter(x => !!x).forEach(function (x) {
  x.textContent = new Date(x.getAttribute('datetime')).toLocaleDateString(
    navigator.language,
    { weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    }
  );
});

Array.from(
  document.querySelectorAll('time.appointment-time')
).filter(x => !!x).forEach(function (x) {
  x.textContent = new Date(x.getAttribute('datetime')).toLocaleTimeString(
    navigator.language,
    { hour: "numeric",
      minute: "numeric"
    }
  );
});

[document.getElementById('offerPrice')].filter(x => !!x).forEach(function (x) {
  x.textContent = Number(x.textContent).toLocaleString(
    navigator.language,
    { minimumFractionDigits: 0,
      maximumFractionDigits: 2
    }
  );
});

window.mdc.autoInit();

Array.from(
  document.querySelectorAll('div.mdc-banner')
).forEach(function (x) { x.MDCBanner.open(); });
